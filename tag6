                howTo: 'Prompt: "Du bist ein w√ºtender Twitter-Mob. Kritisiere unsere Pressemeldung."',
                greenFlags: ['Stress-Test f√ºr Argumente', 'Identifikation von "Blinden Flecken"', 'Training f√ºr Junior-Mitarbeiter'],
                redFlags: ['Eingabe echter vertraulicher Krisendaten', 'Verlass auf KI-Ethik (KI ist oft zu h√∂flich)', 'Nutzung der KI-Antwort als finale Pressemeldung']
            }
        ];

        // --- APP STATE ---
        let searchTerm = '';
        let selectedCategory = 'Alle';

        // --- DOM ELEMENTS ---
        const gridContainer = document.getElementById('gridContainer');
        const filterContainer = document.getElementById('filterContainer');
        const searchInput = document.getElementById('searchInput');
        const modalOverlay = document.getElementById('modalOverlay');
        const modalContent = document.getElementById('modalContent');

        // --- HELPER FUNCTIONS ---
        const getRiskColor = (level) => {
            switch(level) {
                case 'Low': return 'bg-emerald-500/10 text-emerald-400 border-emerald-500/20';
                case 'Medium': return 'bg-yellow-500/10 text-yellow-400 border-yellow-500/20';
                case 'High': return 'bg-red-500/10 text-red-400 border-red-500/20';
                default: return 'bg-slate-500/10 text-slate-400';
            }
        };

        const getRiskBadge = (level) => {
             switch(level) {
                case 'Low': return '‚úÖ Low Risk';
                case 'Medium': return '‚ö†Ô∏è Medium Risk';
                case 'High': return 'üõë High Risk';
                default: return 'Unknown';
            }
        }

        // --- RENDER FUNCTIONS ---
        const renderFilters = () => {
            const categories = ['Alle', ...new Set(USE_CASES.map(u => u.category))];
            
            filterContainer.innerHTML = categories.map(cat => `
                <button 
                    onclick="setCategory('${cat}')"
                    class="px-4 py-2 rounded-xl whitespace-nowrap text-sm font-bold transition-all border ${
                        selectedCategory === cat 
                        ? 'bg-blue-600 border-blue-500 text-white shadow-lg shadow-blue-500/25' 
                        : 'bg-slate-800 border-slate-700 text-slate-400 hover:bg-slate-750 hover:border-slate-600'
                    }"
                >
                    ${cat}
                </button>
            `).join('');
        };

        const renderGrid = () => {
            const filtered = USE_CASES.filter(uc => {
                const matchesSearch = uc.title.toLowerCase().includes(searchTerm.toLowerCase()) || 
                                      uc.description.toLowerCase().includes(searchTerm.toLowerCase()) ||
                                      uc.tools.some(t => t.toLowerCase().includes(searchTerm.toLowerCase()));
                const matchesCategory = selectedCategory === 'Alle' || uc.category === selectedCategory;
                return matchesSearch && matchesCategory;
            });

            if (filtered.length === 0) {
                gridContainer.innerHTML = `
                    <div class="col-span-full text-center py-20 opacity-50">
                        <div class="text-4xl mb-4">ü§∑‚Äç‚ôÇÔ∏è</div>
                        <p>Keine Use Cases gefunden.</p>
                    </div>
                `;
                return;
            }

            gridContainer.innerHTML = filtered.map(uc => `
                <div 
                    onclick="openModal('${uc.id}')"
                    class="bg-slate-800 border border-slate-700 rounded-xl p-6 cursor-pointer card-hover group flex flex-col h-full transition-all"
                >
                    <div class="flex justify-between items-start mb-4">
                        <span class="text-[10px] uppercase font-bold px-2 py-1 rounded border ${getRiskColor(uc.riskLevel)}">
                            ${getRiskBadge(uc.riskLevel)}
                        </span>
                        <span class="text-xs text-slate-500 font-mono">${uc.category}</span>
                    </div>
                    
                    <h3 class="text-xl font-bold text-white mb-2 group-hover:text-blue-400 transition-colors">
                        ${uc.title}
                    </h3>
                    
                    <p class="text-sm text-slate-400 mb-6 flex-1 leading-relaxed">
                        ${uc.description}
                    </p>
                    
                    <div class="flex flex-wrap gap-2 mt-auto pt-4 border-t border-slate-700/50">
                        ${uc.tools.slice(0, 3).map(t => `
                            <span class="text-[10px] bg-slate-900 text-slate-300 px-2 py-1 rounded border border-slate-700">
                                ${t}
                            </span>
                        `).join('')}
                    </div>
                </div>
            `).join('');
        };

        const openModal = (id) => {
            const uc = USE_CASES.find(u => u.id === id);
            if (!uc) return;

            const modalHTML = `
                <div class="p-6 border-b border-slate-800 flex justify-between items-start bg-slate-800/50">
                    <div>
                        <h2 class="text-2xl font-bold text-white mb-1 pr-4">${uc.title}</h2>
                        <div class="flex items-center gap-3 text-sm">
                            <span class="text-slate-400">${uc.category}</span>
                            <span class="font-bold px-2 py-0.5 rounded text-xs border ${getRiskColor(uc.riskLevel)}">
                                Risk: ${uc.riskLevel}
                            </span>
                        </div>
                    </div>
                    <button onclick="closeModal()" class="w-8 h-8 rounded-full bg-slate-800 text-slate-400 hover:text-white hover:bg-slate-700 flex items-center justify-center transition-colors text-xl">
                        √ó
                    </button>
                </div>
                
                <div class="p-6 overflow-y-auto space-y-8 custom-scrollbar">
                    
                    <!-- How To -->
                    <div class="bg-blue-900/10 border border-blue-500/20 p-5 rounded-xl">
                        <h3 class="text-xs font-bold text-blue-400 uppercase tracking-widest mb-2 flex items-center gap-2">
                            üí° Best Practice
                        </h3>
                        <p class="text-blue-100 text-base leading-relaxed">
                            ${uc.howTo}
                        </p>
                    </div>

                    <!-- Flags Grid -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Green Flags -->
                        <div>
                            <h3 class="text-xs font-bold text-emerald-400 uppercase tracking-widest mb-3 flex items-center gap-2">
                                ‚úÖ Green Flags
                            </h3>
                            <ul class="space-y-3">
                                ${uc.greenFlags.map(flag => `
                                    <li class="text-sm text-slate-300 flex items-start gap-3 bg-emerald-900/5 p-3 rounded-lg border border-emerald-500/10">
                                        <span class="text-emerald-500 mt-0.5">‚Ä¢</span>
                                        <span>${flag}</span>
                                    </li>
                                `).join('')}
                            </ul>
                        </div>

                        <!-- Red Flags -->
                        <div>
                            <h3 class="text-xs font-bold text-red-400 uppercase tracking-widest mb-3 flex items-center gap-2">
                                üö© Red Flags
                            </h3>
                            <ul class="space-y-3">
                                ${uc.redFlags.map(flag => `
                                    <li class="text-sm text-slate-300 flex items-start gap-3 bg-red-900/5 p-3 rounded-lg border border-red-500/10">
                                        <span class="text-red-500 mt-0.5">‚Ä¢</span>
                                        <span>${flag}</span>
                                    </li>
                                `).join('')}
                            </ul>
                        </div>
                    </div>

                    <!-- Tools -->
                    <div>
                        <h3 class="text-xs font-bold text-slate-500 uppercase mb-3">G√§ngige Tools</h3>
                        <div class="flex flex-wrap gap-2">
                            ${uc.tools.map(tool => `
                                <span class="px-3 py-1.5 bg-slate-800 rounded-lg text-sm text-slate-300 border border-slate-700 flex items-center gap-2">
                                    ‚öôÔ∏è ${tool}
                                </span>
                            `).join('')}
                        </div>
                    </div>
                </div>
            `;

            modalContent.innerHTML = modalHTML;
            modalOverlay.classList.remove('hidden');
            // Small timeout to allow transition
            setTimeout(() => {
                modalOverlay.classList.remove('opacity-0');
                modalContent.classList.remove('scale-95');
                modalContent.classList.add('scale-100');
            }, 10);
            
            // Lock body scroll
            document.body.style.overflow = 'hidden';
        };

        const closeModal = () => {
            modalOverlay.classList.add('opacity-0');
            modalContent.classList.remove('scale-100');
            modalContent.classList.add('scale-95');
            
            setTimeout(() => {
                modalOverlay.classList.add('hidden');
                document.body.style.overflow = 'auto';
            }, 300);
        };

        // --- EVENT HANDLERS ---
        window.setCategory = (cat) => {
            selectedCategory = cat;
            renderFilters();
            renderGrid();
        };

        window.closeModal = closeModal;
        window.openModal = openModal;

        // Init Search Listener
        searchInput.addEventListener('input', (e) => {
            searchTerm = e.target.value;
            renderGrid();
        });

        // Close modal on outside click
        modalOverlay.addEventListener('click', (e) => {
            if (e.target === modalOverlay) closeModal();
        });

        // Close on Escape
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeModal();
        });

        // --- INIT ---
        renderFilters();
        renderGrid();

    </script>
</body>
