    <script>
        const tasks = [
            "Schreib einen Werbebrief",
            "Verfasse ein Gedicht",
            "Erstelle eine Produktbeschreibung",
            "Schreib eine LinkedIn-Nachricht",
            "Formuliere einen Newsletter",
            "Entwickle einen Elevator Pitch",
            "Erstelle einen Social Media Post",
            "Schreib eine Pressemitteilung",
            "Verfasse einen Blogpost",
            "Entwirf eine Job-Anzeige"
        ];

        const topics = [
            "f√ºr K√§se",
            "√ºber Quantenphysik",
            "f√ºr Hausschuhe",
            "√ºber Zeitreisen",
            "f√ºr ein Wellness-Hotel",
            "√ºber K√ºnstliche Intelligenz",
            "f√ºr Staubsauger",
            "√ºber Meditation",
            "f√ºr Steuersoftware",
            "√ºber Prokrastination"
        ];

        const styles = [
            "im Stil von Goethe",
            "wie ein Gen Z TikToker",
            "als Shakespeares Sonett",
            "wie ein Pirat",
            "als Beh√∂rdenbrief",
            "wie ein Rapper",
            "im M√§rchenton",
            "als Nachrichtensprecher",
            "wie ein Motivationscoach",
            "im Stil einer Kochsendung"
        ];

        let currentPrompt = "";

        function getRandomElement(array) {
            return array[Math.floor(Math.random() * array.length)];
        }

        function spin() {
            const btn = document.getElementById('spinBtn');
            const display = document.getElementById('rouletteDisplay');
            const promptText = document.getElementById('promptText');
            const promptParts = document.getElementById('promptParts');
            
            btn.disabled = true;
            display.classList.add('spinning');
            
            // Simulate spinning animation
            let counter = 0;
            const spinInterval = setInterval(() => {
                const tempTask = getRandomElement(tasks);
                const tempTopic = getRandomElement(topics);
                const tempStyle = getRandomElement(styles);
                promptText.textContent = `${tempTask} ${tempTopic} ${tempStyle}`;
                counter++;
                
                if (counter > 15) {
                    clearInterval(spinInterval);
                    finalizePrompt();
                }
            }, 100);
        }

        function finalizePrompt() {
            const display = document.getElementById('rouletteDisplay');
            const promptText = document.getElementById('promptText');
            const promptParts = document.getElementById('promptParts');
            const btn = document.getElementById('spinBtn');
            
            const task = getRandomElement(tasks);
            const topic = getRandomElement(topics);
            const style = getRandomElement(styles);
            
            currentPrompt = `${task} ${topic} ${style}`;
            
            promptText.textContent = currentPrompt;
            
            promptParts.innerHTML = `
                <div class="prompt-part">üìù ${task}</div>
                <div class="prompt-part">üéØ ${topic}</div>
                <div class="prompt-part">üé® ${style}</div>
            `;
            
            display.classList.remove('spinning');
            btn.disabled = false;
        }

        function copyPrompt() {
            if (!currentPrompt) {
                alert('Dreh erst das Roulette!');
                return;
            }
            
            navigator.clipboard.writeText(currentPrompt).then(() => {
                const btn = event.target;
                const originalText = btn.textContent;
                btn.textContent = '‚úÖ Kopiert!';
                setTimeout(() => {
                    btn.textContent = originalText;
                }, 2000);
            });
        }

        function sharePrompt() {
            if (!currentPrompt) {
                alert('Dreh erst das Roulette!');
                return;
            }
            
            const text = `Mein absurder KI-Prompt vom #VibecodeingAdventskalender:\n\n"${currentPrompt}"\n\nüé≤ Probier's selbst: [DEINE-URL]`;
            
            if (navigator.share) {
                navigator.share({
                    title: 'Prompt-Roulette',
                    text: text
                });
            } else {
                navigator.clipboard.writeText(text).then(() => {
                    alert('Zum Teilen in die Zwischenablage kopiert!');
                });
            }
        }
    </script>
